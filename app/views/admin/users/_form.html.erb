<%= simple_form_for(user, url: admin_users_path) do |f| %>
  <%= render "shared/error_messages", resource: user %>

  <div class="form-inputs">
    <%= f.input :full_name %>
    <br/>
    <%= f.input :email %>
    <br/>
    <%= f.input :password %>
    <br/>
    <%= f.input :password_confirmation %>
    <br/>
    <%= f.input :role, as: :select, collection: @user_roles %>
    <br/>
    <%= f.input :avatar %>
    <br/>
    <%= f.input :avatar_url %>
  </div>

  <br/>
  <hr/>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
