<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th><%= t(:full_name, scope: 'activerecord.attributes.user') %></th>
      <th><%= t(:email, scope: 'activerecord.attributes.user') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', admin_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @users %>

<br/>
<%= link_to 'New User', new_admin_user_path %>
